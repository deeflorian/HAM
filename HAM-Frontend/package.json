{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "start": "webpack-dev-server --display-error-details --config webpack.config.js --progress --inline --colors --host 0.0.0.0",
    "build": "webpack --config webpack.config.js --progress --colors"
  },
  "devDependencies": {
    "babel-core": "^6.0.20",
    "babel-eslint": "^4.1.3",
